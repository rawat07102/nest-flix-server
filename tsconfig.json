{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@auth/*": ["./src/auth/*"],
      "@user/*": ["./src/user/*"],
      "@config/*": ["./src/config/*"],
      "@lib/*": ["./src/lib/*"],
      "@http/*": ["./src/http/*"],
      "@movie/*": ["./src/movie/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
